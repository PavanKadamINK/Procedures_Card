<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
          xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml"
          width="100%"
          displayBlock="true"
          controllerName="com.winslow.yve.Environmental_Operational_ProjectMan_System.Card">

        <VBox class="sapUiSmallMargin">
    <!-- Main Title -->
    <Title text="{cardModel>/Title}" level="H1" class="Title sapUiMediumMargin" />

    <!-- List -->
    <List id="idOTFilesList" width="100%" growing="true" items="{cardModel>/cards}">
        <items>
            <CustomListItem type="Active" press="handleFilePress">
                <HBox alignItems="Center" class="sapUiSmallMargin">
                    <!-- File Icon with margin -->
                    <core:Icon src="sap-icon://document" size="2rem" class="sapUiSmallMarginEnd" />

                    <!-- Texts -->
                    <VBox class="sapUiSmallMarginBegin">
                        <Title text="{cardModel>title}" wrapping="true" class="boldText" />
                    </VBox>
                </HBox>
            </CustomListItem>
        </items>
    </List>
</VBox>


